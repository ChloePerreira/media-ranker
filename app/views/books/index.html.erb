<div class = "container">
<table>
  <tr>
    <th>Ranking</th>
    <th>Name</th>
    <th>Upvote</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%=book.vote%></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= button_to 'Upvote', upvote_book_path(book.id)%></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add a book', new_book_path, class: "button" %>
<%= link_to 'View all media', root_path, class: "button" %>
</div>
