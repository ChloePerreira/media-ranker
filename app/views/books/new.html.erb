<h2>New book</h2>
<%= form_for @book do |f| %>
  Title: <%= f.text_field :title, placeholder: 'Book title' %>
  Author: <%= f.text_field :author, placeholder: 'Author of book' %>
  Description: <%= f.text_field :description, placeholder: 'Short book description. No spoilers!' %>
  <%= f.submit %>
<% end %>
