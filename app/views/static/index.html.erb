<div class = "container">
  
  <div class = "col-md-4">
  <h1>Top books</h1>
  <% @books.each do |book| %>
    <h2><%= link_to book.title, book_path(book.id) %> <small> Ranked: <%=book.vote %></small></h2>
  <% end %>
  <%= link_to 'View more books', books_path %>
  </div>


  <div class = "col-md-4">
  <h1>Top albums</h1>
  <% @albums.each do |album| %>
    <h2><%= link_to album.title, album_path(album.id) %> <small> Ranked: <%=album.vote %></small></h2>
  <% end %>
  <%= link_to 'View more albums', albums_path %>
  </div>


  <div class = "col-md-4">
  <h1>Top movies</h1>
  <% @movies.each do |movie| %>
    <h2><%= link_to movie.title, movie_path(movie.id) %> <small> Ranked: <%=movie.vote %></small></h2>
  <% end %>
  <%= link_to 'View more movies', movies_path %>
  </div>
</div>
