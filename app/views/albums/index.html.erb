<div class="container">
<table>
  <tr>
    <th>Ranking</th>
    <th>Name</th>
    <th>Upvote</th>
  </tr>
  <% @albums.each do |album| %>
    <tr>
      <td><%= album.vote %></td>
      <td><%= link_to album.title, album_path(album.id) %></td>
      <td><%= button_to 'Upvote', upvote_album_path(album.id) %></td>
    </tr>
  <% end %>
</table>

<%= link_to "View all media", root_path, class: "button" %>
<%= link_to "Add an album", new_album_path, class: "button" %>
</div>
